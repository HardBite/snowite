<div id="user_nav">
  <% if current_user %>
    Logged in as <%= current_user.email %>.
    <%= link_to "Log out", log_out_path %>
    <% if session[:role_id] && session[:role_id]<3 %>
      <p align = right> <%= link_to "Show users", '/users_list'%> </p>
      <p align = right> <%= link_to "View my profile", '/user_show' %> </p>
      <p align = right> <%= link_to "Edit my profile", '/user_edit'%> </p>
    <% end %>
    <% if session[:role_id] == 1%>
      <p align = right> <%= link_to "Add admin", '/add_admin'%> </p>
    <%end%>
  <% else %>
    <%= link_to "Sign up", sign_up_path %> or
    <%= link_to "log in", log_in_path %>
  <% end %>

</div>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

